<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ss.realm_test">

    <uses-permission
        android:name="android.permission.BLUETOOTH"
        android:required="false" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_ADMIN"
        android:required="false" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!--디바이스 재부팅 시 알람 삭제 방지-->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_belling"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_belling_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterDevice" />
        <activity android:name=".CheckDeviceRun" />
        <activity android:name=".DeviceInfo" />
        <activity android:name=".InsertName" />
        <activity android:name=".Map" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCg9WQ-nL4H0YsR5HgOS-YQrprthKSrGfg" />

        <service
            android:name="org.altbeacon.beacon.service.BeaconService"
            android:enabled="true"
            android:exported="false"
            android:isolatedProcess="false"
            android:label="beacon" />
        <service
            android:name="org.altbeacon.beacon.BeaconIntentProcessor"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="org.altbeacon.beacon.service.ScanJob"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity android:name=".SetAlarm"/>
        <receiver
            android:name=".AlarmReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="com.test.alarmtestous.ALARM_START"/>
            </intent-filter>
        </receiver>

        <service
            android:name=".RingtonePlayingService"
            android:enabled="true"/>
    </application>

</manifest>